<Page x:Class="Final.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Final.Pages"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainPage"
      DataContext="{Binding Source={StaticResource Locator}, Path=Main}">

    <StackPanel>
        <Label Content="Univercity Manager" HorizontalAlignment="Right" Margin="20 0"
               FontSize="34" FontFamily="Segoe Script" FontWeight="Bold" Foreground="#FF177CC1" />
        <Label Height="36" />
        <Button Content="Go to SecondPage" Command="{Binding ChangeToSecondPageCommand}" />
    </StackPanel>
</Page>